extends layout

block content

    div#gamescm(style='width:100%')
        table#CM_game(style='width:100%')
            tr
                td(style='width:6%')
                    img(src='/images/clashofmoland.png' style='width:4em')
                th(style='width:11%')
                    p Monument
                th(style='width:11%')
                    p Arena
                th(style='width:11%')
                    p Prosperity
                th(style='width:11%')
                    p Hero
                th(style='width:11%')
                    p Prestige
                th(style='width:11%')
                    p Earnings
                th(style='width:11%')
                    p Expencies
                th(style='width:11%')
                    p Total
                td(style='width:6%')
                    i.fa-regular.fa-square-plus.fa-2xl(onclick='addcmSeason()')

    script(type='text/javascript', src='javascripts/views/clash.js')
    script.
       var price = !{prices}
       savePrices(price)

       createcmTable()
       
       document.addEventListener('newcmSeasonAdded', (e) => {
            createcmTable()
       }, false)

       document.addEventListener('seasoncmDeleted', (e) => {
            createcmTable()
       }, false)

       document.addEventListener('cmValueChanged', (e) => {
            createcmSeasonResult(e.detail)
       }, false)

       

        