extends layout

block content
    div#gamesCZ(style='width:100%')
        table#CZ_game(style='width:100%')
            tr
                td(style='width:6%')
                    img(src='/images/chaincarena.png' style='width:4em')
                th(style='width:11%')
                    p Adventure Points
                th(style='width:11%')
                    p Arena
                th(style='width:11%')
                    p Royal Arena
                th(style='width:11%')
                    p Dungeon
                th(style='width:11%')
                    p Treasure Island
                th(style='width:11%')
                    p Earnings
                th(style='width:11%')
                    p Expencies
                th(style='width:11%')
                    p Total
                td(style='width:6%')
                    i.fa-regular.fa-square-plus.fa-2xl(onclick='addCZSeason()')
    script(type='text/javascript', src='javascripts/views/chainz.js')
    script.
       var price = !{prices}
       savePrices(price)

       createCZTable()
       
       document.addEventListener('newCZSeasonAdded', (e) => {
            createCZTable()
       }, false)

       document.addEventListener('seasonCZDeleted', (e) => {
            createCZTable()
       }, false)

       document.addEventListener('czValueChanged', (e) => {
            createCZSeasonResult(e.detail)
       }, false)

       
